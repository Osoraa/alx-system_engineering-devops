#!/usr/bin/env bash
# Counts 1 to 20 and does a task at specific loops

i=0

while ((i++ < 20)); do
    echo "$i"
    case "$i" in
    4)
        echo "bad luck from China"
        ;;
    9)
        echo "bad luck from Japan"
        ;;
    17)
        echo "bad luck from Italy"
        ;;
    esac
done
